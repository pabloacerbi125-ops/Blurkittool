{
  "name": "blurkit-tool",
  "version": "1.0.0",
  "description": "BlurkitTool - Herramienta para gestionar mods de Minecraft",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win"
  },
  "author": "POnyGamer_uwu",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.blurkit.tool",
    "productName": "BlurkitTool",
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "files": [
      "main.js"
    ],
    "extraResources": [
      {
        "from": "dist/BlurkitTool.exe",
        "to": "BlurkitTool.exe"
      }
    ]
  }
}
